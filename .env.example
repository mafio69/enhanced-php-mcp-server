# MCP PHP Server Environment Configuration

# API Keys
BRAVE_API_KEY=your_brave_search_api_key_here
GITHUB_PERSONAL_ACCESS_TOKEN=your_github_token_here
WEATHER_API_KEY=your_weatherapi_com_key_here

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=mcp_php_server
DB_USERNAME=root
DB_PASSWORD=

# Server Configuration
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost:8888

# Security
APP_KEY=
JWT_SECRET=

# Server Settings
SERVER_HOST=0.0.0.0
SERVER_PORT=8888
SERVER_TIMEOUT=30

# Logging
LOG_CHANNEL=stack
LOG_LEVEL=info
LOG_PATH=logs

# Cache
CACHE_DRIVER=file
CACHE_PREFIX=mcp_

# Session
SESSION_LIFETIME=86400
SESSION_ENCRYPT=false
SESSION_PATH=/

# Email (for password resets)
MAIL_MAILER=smtp
MAIL_HOST=localhost
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@mcp-server.local
MAIL_FROM_NAME="MCP PHP Server"

# API Settings
API_RATE_LIMIT=60
API_TIMEOUT=30

# Tool Settings
TOOLS_ENABLED=true
TOOLS_TIMEOUT=30
TOOLS_MEMORY_LIMIT=256M

# Security Settings
BCRYPT_ROUNDS=12
ARGON2_MEMORY=65536
ARGON2_TIME=4
ARGON2_THREADS=1

# File Upload
UPLOAD_MAX_SIZE=10485760
UPLOAD_PATH=storage/uploads

# Backup Settings
BACKUP_ENABLED=true
BACKUP_PATH=storage/backups
BACKUP_RETENTION=7

# Performance
OPCACHE_ENABLED=true
QUERY_CACHE=true
SLOW_QUERY_THRESHOLD=1.0

# Development
XDEBUG_ENABLED=false
XDEBUG_HOST=localhost
XDEBUG_PORT=9003