{
    "name": "mafio69/enhanced-php-mcp-server",
    "description": "Professional PHP MCP Server with multiple tools and HTTP capabilities",
    "type": "project",
    "require": {
        "php": ">=8.1",
        "ext-curl": "*",
        "ext-json": "*",
        "guzzlehttp/guzzle": "^7.8",
        "monolog/monolog": "^3.0",
        "php-di/php-di": "^7.0",
        "php-mcp/server": "^3.3",
        "psr/container": "^2.0",
        "psr/log": "^3.0",
        "react/event-loop": "^1.3",
        "react/socket": "^1.16",
        "react/stream": "^1.4",
        "slim/psr7": "^1.6",
        "slim/slim": "4.*",
        "vlucas/phpdotenv": "^5.6"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "friendsofphp/php-cs-fixer": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/",
            "App\\Tools\\": "tools/",
            "App\\Config\\": "config/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "start": "php public/index.php",
        "test": "phpunit -c tests/phpunit.xml",
        "cs-fix": "php-cs-fixer fix",
        "cs-check": "php-cs-fixer fix --dry-run --diff"
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "keywords": ["mcp", "server", "php", "tools", "api"],
    "license": "MIT",
    "authors": [
        {
            "name": "mafio69",
            "email": "mafio69@example.com"
        }
    ]
}
